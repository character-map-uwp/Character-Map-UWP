<views:ViewBase
    x:Class="CharacterMap.Views.FontMapView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CharacterMap.Controls"
    xmlns:core="using:CharacterMap.Core"
    xmlns:cx="using:CharacterMapCX"
    xmlns:cxc="using:CharacterMapCX.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:CharacterMap.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:CharacterMap.Models"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:services="using:CharacterMap.Services"
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:viewmodels="using:CharacterMap.ViewModels"
    xmlns:views="using:CharacterMap.Views"
    xmlns:win1903="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 8)"
    x:Name="ViewRoot"
    BorderThickness="0"
    FontFamily="{ThemeResource ContentControlThemeFontFamily}"
    SizeChanged="UserControl_SizeChanged"
    mc:Ignorable="d"
    d:DesignHeight="800"
    d:DesignWidth="1280">

    <Control.Tag>
        <Grid x:Name="MoreOptionsBar">
            <Grid.Resources>
                <Style BasedOn="{StaticResource CommandBarFlyoutAppBarButtonStyle}" TargetType="AppBarButton">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                    <Setter Property="VerticalAlignment" Value="Stretch" />
                    <Setter Property="Height" Value="40" />
                    <Setter Property="Width" Value="Auto" />
                    <Setter Property="helpers:FluentAnimation.PointerOver" Value="ContentViewbox" />
                    <Setter Property="helpers:FluentAnimation.PointerOverOffset" Value="-3" />
                    <Setter Property="helpers:FluentAnimation.PointerOverAxis" Value="Vertical" />
                    <Setter Property="helpers:FluentAnimation.Pressed" Value="ContentViewbox" />
                    <Setter Property="helpers:FluentAnimation.PointerDownScale" Value="0.95" />
                </Style>
                <Style BasedOn="{StaticResource CommandBarFlyoutAppBarToggleButtonStyle}" TargetType="AppBarToggleButton">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                    <Setter Property="VerticalAlignment" Value="Stretch" />
                    <Setter Property="CornerRadius" Value="{StaticResource CommandToggleCornerRadius}" />
                    <Setter Property="Height" Value="40" />
                    <Setter Property="Width" Value="Auto" />
                    <Setter Property="helpers:FluentAnimation.PointerOver" Value="ContentViewbox" />
                    <Setter Property="helpers:FluentAnimation.PointerOverOffset" Value="-3" />
                    <Setter Property="helpers:FluentAnimation.PointerOverAxis" Value="Vertical" />
                    <Setter Property="helpers:FluentAnimation.Pressed" Value="ContentViewbox" />
                    <Setter Property="helpers:FluentAnimation.PointerDownScale" Value="0.95" />
                    <!--<Setter Property="core:Properties.ClickAnimation" Value="Content|Scale" />
                    <Setter Property="core:Properties.ClickAnimationOffset" Value="0.9" />-->
                </Style>
            </Grid.Resources>
            <Grid
                ColumnSpacing="0"
                Height="40"
                Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <!--<AppBarButton
                    x:Name="MoreSwitchView"
                    x:Uid="SwitchViewButton"
                    Click="{x:Bind ViewModel.ChangeDisplayMode}">
                    <Button.Resources>
                        <Storyboard x:Key="Released">
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="MOIcon" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.Rotation)">
                                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="540">
                                    <EasingDoubleKeyFrame.EasingFunction>
                                        <CircleEase EasingMode="EaseOut" />
                                    </EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                        <Storyboard x:Key="Pressed">
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="MOIcon" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.Rotation)">
                                <EasingDoubleKeyFrame KeyTime="0" Value="0" />
                                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="-20" />
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </Button.Resources>
                    <FontIcon
                        x:Name="MOIcon"
                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                        Glyph="&#xE8AB;"
                        RenderTransformOrigin="0.5 0.5">
                        <FontIcon.RenderTransform>
                            <CompositeTransform />
                        </FontIcon.RenderTransform>
                    </FontIcon>
                </AppBarButton>-->
                <AppBarToggleButton
                    x:Uid="CharacterGroupingToggle"
                    core:Properties.ThemeIcon="EnableGrouping"
                    IsChecked="{x:Bind ViewModel.Settings.GroupCharacters, Mode=TwoWay}"
                    d:ToolTipService.ToolTip="{core:Localizer Key=CharacterGroupingToggle/[using:Windows.UI.Xaml.Controls]ToolTipService/ToolTip}" />
                <AppBarButton
                    x:Name="IncreaseSizeButton"
                    x:Uid="IncreaseSizeButton"
                    Grid.Column="1"
                    core:Properties.ThemeIcon="IncreaseFontSize"
                    Click="{x:Bind ViewModel.IncreaseCharacterSize}"
                    d:ToolTipService.ToolTip="{core:Localizer Key=IncreaseSizeButton/[using:Windows.UI.Xaml.Controls]ToolTipService/ToolTip}" />
                <AppBarButton
                    x:Name="DecreaseSizeButton"
                    x:Uid="DecreaseSizeButton"
                    Grid.Column="2"
                    core:Properties.ThemeIcon="DecreaseFontSize"
                    Click="{x:Bind ViewModel.DecreaseCharacterSize}"
                    d:ToolTipService.ToolTip="{core:Localizer Key=DecreaseSizeButton/[using:Windows.UI.Xaml.Controls]ToolTipService/ToolTip}" />
                <AppBarToggleButton
                    x:Name="ToggleCopyPaneButton"
                    x:Uid="ToggleCopyPaneButton"
                    Grid.Column="3"
                    core:Properties.ThemeIcon="BottomPane"
                    Checked="{x:Bind ViewModel.ShowCopyPane}"
                    Loaded="ToggleCopyPaneButton_Loaded"
                    Unchecked="{x:Bind ViewModel.HideCopyPane}"
                    d:ToolTipService.ToolTip="{core:Localizer Key=ToggleCopyPaneButton/[using:Windows.UI.Xaml.Controls]ToolTipService/ToolTip}" />
                <AppBarToggleButton
                    x:Name="TogglePaneButton"
                    x:Uid="TogglePaneButton"
                    Grid.Column="4"
                    core:Properties.ThemeIcon="RightPane"
                    Checked="{x:Bind ViewModel.ShowPane}"
                    Loaded="PaneButton_Loaded"
                    Unchecked="{x:Bind ViewModel.HidePane}"
                    d:ToolTipService.ToolTip="{core:Localizer Key=TogglePaneButton/[using:Windows.UI.Xaml.Controls]ToolTipService/ToolTip}" />
            </Grid>
        </Grid>
    </Control.Tag>

    <Control.Resources>

        <Binding
            x:Key="CharBinding"
            ElementName="ViewRoot"
            Mode="OneWay"
            Path="ViewModel.Chars" />

        <CollectionViewSource
            x:Key="CharacterSource"
            x:Name="CharacterSource"
            IsSourceGrouped="True"
            Source="{Binding ViewModel.GroupedChars, ElementName=ViewRoot, Mode=OneWay}" />

        <CollectionViewSource
            x:Key="SearchResultsSource"
            x:Name="SearchResultsSource"
            IsSourceGrouped="{Binding ViewModel.IsSearchGrouped, ElementName=ViewRoot, Mode=OneWay}"
            Source="{Binding ViewModel.SearchResults, ElementName=ViewRoot, Mode=OneWay}" />

        <MenuFlyout x:Name="SuggestionFlyout" AreOpenCloseAnimationsEnabled="{x:Bind ViewModel.AllowAnimation, Mode=OneWay}">
            <MenuFlyoutItem
                x:Uid="EditSuggestionsItem"
                Click="EditSuggestions_Click"
                Icon="Edit"
                d:Text="{core:Localizer Key=EditSuggestionsItem/Text}" />
        </MenuFlyout>

        <Popup x:Name="CharacterPopup">
            <Grid Width="300" Height="400">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>

                <TextBlock
                    x:Name="PopupChar"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{ThemeResource ContentControlThemeFontFamily}"
                    FontSize="150" />

                <StackPanel Grid.Row="1">
                    <TextBlock />
                </StackPanel>
            </Grid>
        </Popup>

        <Storyboard x:Name="GridToTypeBase">
            <DoubleAnimation
                Storyboard.TargetName="SearchBox"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)"
                To="-250"
                Duration="00:00:00.4000000">
                <DoubleAnimation.EasingFunction>
                    <BackEase Amplitude="0.4" EasingMode="EaseIn" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CharacterFilterButton" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="Collapsed" />
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>

        <BitmapIconSource
            x:Name="ColourSource"
            ShowAsMonochrome="False"
            UriSource="/Assets/ColourIcon.png" />

        <MenuFlyout
            x:Name="GridContextFlyout"
            AreOpenCloseAnimationsEnabled="{x:Bind ViewModel.AllowAnimation, Mode=OneWay}"
            MenuFlyoutPresenterStyle="{StaticResource DefaultFlyoutStyle}"
            Placement="Bottom">
            <MenuFlyoutItem
                x:Uid="BtnCopy"
                core:Properties.ThemeIcon="Copy"
                Click="CopyClick"
                CommandParameter="{x:Bind models:DevValueType.Char}"
                Style="{StaticResource ThemeMenuFlyoutItemStyle}"
                d:Text="{core:Localizer Key=BtnCopy/Text}" />
            <MenuFlyoutSubItem
                x:Uid="CopyAsImageItem"
                core:Properties.ThemeIcon="Copy"
                d:Text="{core:Localizer Key=CopyAsImageItem/Text}">

                <MenuFlyoutItem
                    x:Uid="CopyAsPngItem"
                    KeyboardAcceleratorTextOverride="Ctrl+Alt+C"
                    Style="{StaticResource MenuFlyoutItemReadOnlyHeaderStyle}"
                    d:Text="{core:Localizer Key=CopyAsPngItem/Text}" />
                <MenuFlyoutItem
                    x:Uid="ColoredGlyphLabel"
                    Click="SavePng_Click"
                    CommandParameter="{x:Bind ViewModel.GlyphColor}"
                    Style="{StaticResource ThemeMenuFlyoutItemStyle}"
                    Tag="Copy"
                    Visibility="{x:Bind SavePNGColouredItem.Visibility, Mode=OneWay}"
                    d:Text="{core:Localizer Key=ColoredGlyphLabel/Text}">
                    <MenuFlyoutItem.Icon>
                        <IconSourceElement IconSource="{StaticResource ColourSource}" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Uid="BlackFill"
                    Click="SavePng_Click"
                    CommandParameter="{x:Bind ViewModel.BlackColor}"
                    Style="{StaticResource ThemeMenuFlyoutItemStyle}"
                    Tag="Copy"
                    Visibility="{x:Bind core:Converters.FalseToVis(ViewModel.SelectedCharAnalysis.ContainsBitmapGlyphs), Mode=OneWay, FallbackValue=Collapsed}"
                    d:Text="{core:Localizer Key=BlackFill/Text}">
                    <MenuFlyoutItem.Icon>
                        <FontIcon core:Properties.ThemeIcon="FilledSquare" Foreground="Black" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Uid="WhiteFill"
                    Click="SavePng_Click"
                    CommandParameter="{x:Bind ViewModel.WhiteColor}"
                    Style="{StaticResource ThemeMenuFlyoutItemStyle}"
                    Tag="Copy"
                    Visibility="{x:Bind core:Converters.FalseToVis(ViewModel.SelectedCharAnalysis.ContainsBitmapGlyphs), Mode=OneWay, FallbackValue=Collapsed}"
                    d:Text="{core:Localizer Key=WhiteFill/Text}">
                    <MenuFlyoutItem.Icon>
                        <FontIcon core:Properties.ThemeIcon="FilledSquare" Foreground="White" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Uid="CopyAsSvgItem"
                    KeyboardAcceleratorTextOverride="Ctrl+Shift+C"
                    Style="{StaticResource MenuFlyoutItemReadOnlyHeaderStyle}"
                    Visibility="{x:Bind ViewModel.SelectedCharAnalysis.IsFullVectorBased, Mode=OneWay}"
                    d:Text="{core:Localizer Key=CopyAsSvgItem/Text}" />
                <MenuFlyoutItem
                    x:Uid="ColoredGlyphLabel"
                    Click="SaveSvg_Click"
                    CommandParameter="{x:Bind ViewModel.GlyphColor}"
                    Style="{StaticResource ThemeMenuFlyoutItemStyle}"
                    Tag="Copy"
                    Visibility="{x:Bind core:Converters.TrueAndTrueAndFalseToVis(ViewModel.SelectedCharAnalysis.HasColorGlyphs, ViewModel.SelectedCharAnalysis.IsFullVectorBased, ViewModel.IsSvgChar), Mode=OneWay}"
                    d:Text="{core:Localizer Key=ColoredGlyphLabel/Text}">
                    <MenuFlyoutItem.Icon>
                        <IconSourceElement IconSource="{StaticResource ColourSource}" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Uid="BlackFill"
                    Click="SaveSvg_Click"
                    CommandParameter="{x:Bind ViewModel.BlackColor}"
                    Style="{StaticResource ThemeMenuFlyoutItemStyle}"
                    Tag="Copy"
                    Visibility="{x:Bind core:Converters.TrueAndFalseToVis(ViewModel.SelectedCharAnalysis.IsFullVectorBased, ViewModel.IsSvgChar), Mode=OneWay}"
                    d:Text="{core:Localizer Key=BlackFill/Text}">
                    <MenuFlyoutItem.Icon>
                        <FontIcon core:Properties.ThemeIcon="FilledSquare" Foreground="Black" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Uid="WhiteFill"
                    Click="SaveSvg_Click"
                    CommandParameter="{x:Bind ViewModel.WhiteColor}"
                    Style="{StaticResource ThemeMenuFlyoutItemStyle}"
                    Tag="Copy"
                    Visibility="{x:Bind core:Converters.TrueAndFalseToVis(ViewModel.SelectedCharAnalysis.IsFullVectorBased, ViewModel.IsSvgChar), Mode=OneWay}"
                    d:Text="{core:Localizer Key=WhiteFill/Text}">
                    <MenuFlyoutItem.Icon>
                        <FontIcon core:Properties.ThemeIcon="FilledSquare" Foreground="White" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
            </MenuFlyoutSubItem>

            <MenuFlyoutItem
                x:Name="AddSelectionButton"
                x:Uid="AddSelectionItem"
                core:Properties.ThemeIcon="Add"
                Click="AddClick"
                Style="{StaticResource ThemeMenuFlyoutItemStyle}"
                d:Text="{core:Localizer Key=AddSelectionItem/Text}" />

            <MenuFlyoutSeparator />

            <MenuFlyoutItem
                x:Name="FindCharButton"
                x:Uid="FindCharButton"
                core:Properties.ThemeIcon="Search"
                Click="FindClick"
                Style="{StaticResource ThemeMenuFlyoutItemStyle}"
                d:Text="{core:Localizer Key=FindCharButton/Text}" />

            <MenuFlyoutSeparator Visibility="{Binding ElementName=FindCharButton, Path=Visibility}" />

            <MenuFlyoutItem
                x:Uid="CalligraphyLabel"
                core:Properties.ThemeIcon="Calligraphy"
                Click="OpenCalligraphyClick"
                Style="{StaticResource ThemeMenuFlyoutItemStyle}"
                d:Text="{core:Localizer Key=CalligraphyLabel/Text}" />
            <MenuFlyoutSeparator />

            <MenuFlyoutSubItem
                x:Name="PngRoot"
                x:Uid="ExportPNGLabel"
                core:Properties.ThemeIcon="Save"
                d:Text="{core:Localizer Key=ExportPNGLabel/Text}">
                <MenuFlyoutItem
                    x:Name="SavePNGColouredItem"
                    x:Uid="ColoredGlyphLabel"
                    Click="SavePng_Click"
                    CommandParameter="{x:Bind ViewModel.GlyphColor}"
                    Style="{StaticResource ThemeMenuFlyoutItemStyle}"
                    d:Text="{core:Localizer Key=ColoredGlyphLabel/Text}">
                    <MenuFlyoutItem.Icon>
                        <IconSourceElement IconSource="{StaticResource ColourSource}" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Uid="BlackFill"
                    Click="SavePng_Click"
                    CommandParameter="{x:Bind ViewModel.BlackColor}"
                    Style="{StaticResource ThemeMenuFlyoutItemStyle}"
                    d:Text="{core:Localizer Key=BlackFill/Text}">
                    <MenuFlyoutItem.Icon>
                        <FontIcon core:Properties.ThemeIcon="FilledSquare" Foreground="Black" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Uid="WhiteFill"
                    Click="SavePng_Click"
                    CommandParameter="{x:Bind ViewModel.WhiteColor}"
                    Style="{StaticResource ThemeMenuFlyoutItemStyle}"
                    d:Text="{core:Localizer Key=WhiteFill/Text}">
                    <MenuFlyoutItem.Icon>
                        <FontIcon core:Properties.ThemeIcon="FilledSquare" Foreground="White" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
            </MenuFlyoutSubItem>
            <MenuFlyoutSubItem
                x:Name="SvgRoot"
                x:Uid="ExportSVGLabel"
                core:Properties.ThemeIcon="Save"
                d:Text="{core:Localizer Key=ExportSVGLabel/Text}">
                <MenuFlyoutItem
                    x:Name="SaveSVGColouredItem"
                    x:Uid="ColoredGlyphLabel"
                    Click="SaveSvg_Click"
                    CommandParameter="{x:Bind ViewModel.GlyphColor}"
                    Style="{StaticResource ThemeMenuFlyoutItemStyle}"
                    d:Text="{core:Localizer Key=ColoredGlyphLabel/Text}">
                    <MenuFlyoutItem.Icon>
                        <IconSourceElement IconSource="{StaticResource ColourSource}" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Uid="BlackFill"
                    Click="SaveSvg_Click"
                    CommandParameter="{x:Bind ViewModel.BlackColor}"
                    Style="{StaticResource ThemeMenuFlyoutItemStyle}"
                    d:Text="{core:Localizer Key=BlackFill/Text}">
                    <MenuFlyoutItem.Icon>
                        <FontIcon core:Properties.ThemeIcon="FilledSquare" Foreground="Black" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem
                    x:Uid="WhiteFill"
                    Click="SaveSvg_Click"
                    CommandParameter="{x:Bind ViewModel.WhiteColor}"
                    Style="{StaticResource ThemeMenuFlyoutItemStyle}"
                    d:Text="{core:Localizer Key=WhiteFill/Text}">
                    <MenuFlyoutItem.Icon>
                        <FontIcon core:Properties.ThemeIcon="FilledSquare" Foreground="White" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
            </MenuFlyoutSubItem>
            <MenuFlyoutSeparator />
            <MenuFlyoutSubItem
                x:Name="DevRoot"
                x:Uid="SettingsDevToolsGroupHeader"
                d:Text="{core:Localizer Key=SettingsDevToolsGroupHeader/Text}">
                <MenuFlyoutSubItem.Icon>
                    <PathIcon
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Data="F1 M 2.138672 10 L 4.140625 12.001953 L 3.779297 13.417969 L 0.361328 10 L 4.560547 5.810547 L 5.439453 6.689453 Z M 19.638672 10 L 15.439453 14.189453 L 14.560547 13.310547 L 17.861328 10 L 16.40625 8.544922 C 16.57552 8.375651 16.728516 8.217773 16.865234 8.071289 C 17.001953 7.924805 17.12565 7.770183 17.236328 7.607422 Z M 14.296875 3.75 C 14.570312 3.75 14.825846 3.798828 15.063477 3.896484 C 15.301106 3.994141 15.507813 4.130859 15.683594 4.306641 C 15.859375 4.482422 15.997721 4.6875 16.098633 4.921875 C 16.199543 5.15625 16.25 5.410156 16.25 5.683594 C 16.25 5.9375 16.201172 6.184896 16.103516 6.425781 C 16.005859 6.666668 15.865885 6.878256 15.683594 7.060547 L 8.681641 14.082031 L 5 15 L 5.917969 11.318359 L 12.919922 4.306641 C 13.102213 4.12435 13.313802 3.986004 13.554688 3.891602 C 13.795572 3.797201 14.042968 3.75 14.296875 3.75 Z M 14.794922 6.181641 C 14.93164 6.044922 14.999999 5.878906 15 5.683594 C 14.999999 5.481771 14.933268 5.317384 14.799805 5.19043 C 14.666341 5.063478 14.498697 5.000001 14.296875 5 C 14.205729 5.000001 14.117838 5.014649 14.033203 5.043945 C 13.948567 5.073243 13.873697 5.120443 13.808594 5.185547 L 7.050781 11.962891 L 6.71875 13.28125 L 8.037109 12.949219 Z " />
                </MenuFlyoutSubItem.Icon>
                <!--  Menu Items are inflated in code based on DevProviderBase.GetProviders(...)  -->
            </MenuFlyoutSubItem>
        </MenuFlyout>

    </Control.Resources>

    <Grid
        x:Name="LayoutRoot"
        DataContext="{x:Bind ViewModel}"
        VisualStateManager.CustomVisualStateManager="{StaticResource VSM}"
        d:Background="{ThemeResource DefaultPageBackgroundBrush}"
        d:BackgroundTransition="{StaticResource RootBackgroundTransition}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition x:Name="TitleRow" Height="{StaticResource TitleRowGridHeight}" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border
            x:Name="BackgroundBorder"
            Grid.RowSpan="5"
            BackgroundTransition="{StaticResource RootBackgroundTransition}"
            Canvas.ZIndex="-5" />

        <controls:XamlTitleBar
            x:Name="TitleBar"
            x:Load="{x:Bind IsStandalone}"
            VerticalAlignment="Top"
            Canvas.ZIndex="101"
            d:IsLocked="True">
            <!--  Temporarily removed as causes instant crash  -->
            <!--<StackPanel Orientation="Horizontal">
                <ToggleButton
                    x:Name="OverlayButton"
                    x:Uid="CompactOverlayButton"
                    Width="45"
                    Click="{x:Bind ToggleCompactOverlay}"
                    Foreground="{Binding Foreground, ElementName=TitleBar}"
                    Style="{StaticResource IconToggleButtonStyle}">
                    <FontIcon FontSize="14" Glyph="&#xE8A7;" />
                </ToggleButton>
            </StackPanel>-->
        </controls:XamlTitleBar>

        <!--  Title row  -->
        <Grid
            x:Name="TitleGrid"
            Grid.RowSpan="2"
            Canvas.ZIndex="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <!--  Left Content  -->
                <ColumnDefinition Width="Auto" />
                <!--  Font Name  -->
                <ColumnDefinition Width="*" />
                <!--  Font Import Button (Stand-alone Window)  -->
                <ColumnDefinition Width="Auto" />
                <!--  Search Box & Right Content  -->
                <ColumnDefinition Width="Auto" />
                <!--    -->
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Border
                x:Name="TitleBarSpacer"
                x:Load="{x:Bind IsStandalone}"
                Grid.ColumnSpan="10"
                Height="{x:Bind TitleBar.Height, Mode=OneWay}" />

            <ContentPresenter Grid.Row="1" Content="{x:Bind TitleLeftContent, Mode=OneWay}" />

            <Border
                x:Name="TitleRowSpacer"
                Grid.Row="1"
                Height="{StaticResource TitleRowHeight}" />

            <TextBlock
                x:Name="FontTitleBlock"
                x:FieldModifier="public"
                Grid.Row="1"
                Grid.Column="1"
                Margin="24 0 8 0"
                VerticalAlignment="Center"
                core:Properties.ToolTip="{x:Bind ViewModel.SelectedFont.Font.Name, FallbackValue='', TargetNullValue='', Mode=OneWay}"
                core:Properties.UseStandardReposition="{x:Bind ViewModel.AllowAnimation, Mode=OneWay}"
                IsTextSelectionEnabled="True"
                Style="{StaticResource TitleTextStyle}"
                Text="{Binding SelectedFont.Font.Name, Converter={StaticResource TitleConverter}}"
                TextTrimming="CharacterEllipsis"
                d:Text="Font Name" />

            <toolkit:WrapPanel
                x:Name="ExternalPanel"
                x:Load="{x:Bind ViewModel.IsExternalFile}"
                Grid.Row="1"
                Grid.Column="2"
                Height="{StaticResource TitleRowHeight}"
                HorizontalAlignment="Right"
                core:Properties.UseStandardReposition="{x:Bind ViewModel.AllowAnimation, Mode=OneWay}"
                HorizontalSpacing="4"
                Orientation="Horizontal"
                VerticalSpacing="4">
                <controls:UXButton
                    x:Name="InstallButton"
                    x:Load="{x:Bind ViewModel.IsInstallable, Mode=OneWay}"
                    Height="{StaticResource TitleRowHeight}"
                    Padding="12,0"
                    core:Properties.UseStandardReposition="{x:Bind ViewModel.AllowAnimation, Mode=OneWay}"
                    Click="InstallButton_Click"
                    Style="{ThemeResource TransparentButton}">
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <FontIcon Glyph="&#xE896;" />
                        <TextBlock
                            x:Uid="InstallLabel"
                            Grid.Column="1"
                            FontFamily="{ThemeResource ContentControlThemeFontFamily}"
                            TextTrimming="CharacterEllipsis"
                            d:Text="{core:Localizer Key=InstallLabel/Text}" />
                    </Grid>
                </controls:UXButton>
                <controls:UXButton
                    x:Name="AddToLibraryButton"
                    Height="{StaticResource TitleRowHeight}"
                    Padding="12,0"
                    core:Properties.UseStandardReposition="{x:Bind ViewModel.AllowAnimation, Mode=OneWay}"
                    Click="{x:Bind ViewModel.ImportFile}"
                    IsEnabled="{Binding ImportButtonEnabled}"
                    Style="{ThemeResource TransparentButton}"
                    d:Click="{x:Bind ViewModel.LaunchInstall}">
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <FontIcon core:Properties.ThemeIcon="Add" />
                        <TextBlock
                            x:Uid="AddToCollectionHint"
                            Grid.Column="1"
                            FontFamily="{ThemeResource ContentControlThemeFontFamily}"
                            TextTrimming="CharacterEllipsis"
                            d:Text="{core:Localizer Key=AddToCollectionHint/Text}" />
                    </Grid>
                </controls:UXButton>
            </toolkit:WrapPanel>



            <Grid
                x:Name="SearchContainer"
                Grid.Row="1"
                Grid.Column="3"
                HorizontalAlignment="Right"
                VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <AutoSuggestBox
                    x:Name="SearchBox"
                    x:Uid="SearchBox"
                    x:FieldModifier="public"
                    Width="290"
                    Margin="6 0 6 0"
                    VerticalAlignment="Center"
                    core:Properties.FontFamily="{x:Bind ViewModel.FontFamily, Mode=OneWay}"
                    core:Properties.FontStretch="{x:Bind ViewModel.SelectedVariant.DirectWriteProperties.Stretch, Mode=OneWay}"
                    core:Properties.FontStyle="{x:Bind ViewModel.SelectedVariant.DirectWriteProperties.Style, Mode=OneWay}"
                    core:Properties.FontWeight="{x:Bind ViewModel.SelectedVariant.DirectWriteProperties.Weight, Mode=OneWay}"
                    core:Properties.ToolTipMemberPath="Description"
                    core:Properties.ToolTipStyleKey="DefaultThemeToolTipStyle"
                    GotFocus="SearchBox_GotFocus"
                    ItemTemplate="{StaticResource SearchResultTemplate}"
                    ItemsSource="{Binding Source={StaticResource SearchResultsSource}}"
                    PreviewKeyDown="SearchBox_PreviewKeyDown"
                    QuerySubmitted="SearchBox_QuerySubmitted"
                    RenderTransformOrigin="0.5,0.5"
                    Style="{ThemeResource DefaultThemeAutoSuggestBoxStyle}"
                    SuggestionChosen="SearchBox_SuggestionChosen"
                    Text="{Binding SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextChanged="SearchBox_TextChanged"
                    TextMemberPath="Description"
                    UpdateTextOnSelect="False"
                    d:PlaceholderText="{core:Localizer Key=SearchBox/PlaceholderText}">
                    <AutoSuggestBox.RenderTransform>
                        <CompositeTransform />
                    </AutoSuggestBox.RenderTransform>
                    <AutoSuggestBox.QueryIcon>
                        <FontIcon core:Properties.ThemeIcon="Search" />
                    </AutoSuggestBox.QueryIcon>
                    <AutoSuggestBox.KeyboardAccelerators>
                        <KeyboardAccelerator
                            Key="F"
                            Invoked="SearchBox_ShortcutInvoked"
                            Modifiers="Control" />
                    </AutoSuggestBox.KeyboardAccelerators>
                </AutoSuggestBox>

                <ContentPresenter
                    x:Name="RightPresenter"
                    Grid.Row="1"
                    Grid.Column="4"
                    Margin="0 4 0 0"
                    Content="{x:Bind TitleRightContent, Mode=OneWay}">
                    <d:ContentPresenter.Content>
                        <Border Width="45" Height="45">
                            <FontIcon core:Properties.ThemeIcon="Settings" />
                        </Border>
                    </d:ContentPresenter.Content>
                </ContentPresenter>

            </Grid>

        </Grid>

        <!--  Main UI Grid  -->
        <Grid
            x:Name="MainUIGrid"
            Grid.Row="2"
            Grid.Column="1"
            Padding="{Binding ElementName=ViewRoot, Path=Padding}"
            Canvas.ZIndex="-1">
            <Grid.Resources>
                <PerspectiveTransform3D x:Key="Perspective" Depth="1000" />
                <Storyboard x:Name="BorderFadeInStoryboard">
                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="BorderCopiedMessage" Storyboard.TargetProperty="Opacity">
                        <LinearDoubleKeyFrame KeyTime="0:0:0" Value="0" />
                        <LinearDoubleKeyFrame
                            x:Name="CopyShowFrame"
                            KeyTime="0:0:0.6"
                            Value="1" />
                        <LinearDoubleKeyFrame
                            x:Name="CopyHideFrame"
                            KeyTime="0:0:2"
                            Value="1" />
                        <LinearDoubleKeyFrame KeyTime="0:0:2.6" Value="0" />
                    </DoubleAnimationUsingKeyFrames>
                </Storyboard>
            </Grid.Resources>

            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    x:Name="CharGridColumn"
                    Width="*"
                    MinWidth="250" />
                <ColumnDefinition x:Name="SplitterColumn" Width="Auto" />
                <ColumnDefinition
                    x:Name="PreviewColumn"
                    Width="326"
                    MinWidth="150" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <Rectangle
                x:Name="ShadowTarget"
                Grid.RowSpan="3"
                Grid.ColumnSpan="3"
                Fill="Transparent"
                Stretch="UniformToFill"
                StrokeThickness="0" />



            <!--  Map Header  -->
            <Grid
                x:Name="CharGridHeader"
                x:FieldModifier="public"
                ColumnSpacing="0"
                Margin="12 0 8 12"
                VerticalAlignment="Top"
                Canvas.ZIndex="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <toolkit:WrapPanel
                    x:Name="OptionsPanel"
                    x:FieldModifier="public"
                    HorizontalAlignment="Stretch"
                    ChildrenTransitions="{x:Bind GetRepositionCollection(ViewModel.AllowAnimation), Mode=OneWay}"
                    HorizontalSpacing="8"
                    Orientation="Horizontal">

                    <controls:UXComboBox
                        x:Name="WeightSelector"
                        MinWidth="160"
                        Margin="0 -1 0 0"
                        VerticalAlignment="Stretch"
                        FontSize="12"
                        FontWeight="SemiBold"
                        IsEnabled="{Binding SelectedFont.Font.HasAnyVariants}"
                        ItemsSource="{Binding SelectedFont.Font.AllVariants}"
                        SelectedItem="{Binding SelectedFont.Selected, Mode=TwoWay}"
                        Style="{StaticResource VariantComboBoxStyle}"
                        ToolTipMemberPath="PreferredName">
                        <controls:UXComboBox.SecondaryContent>
                            <TextBlock
                                x:Name="SelectorLabel"
                                FontSize="12"
                                FontWeight="Normal"
                                Foreground="{ThemeResource TextControlPlaceholderForeground}"
                                Text="{x:Bind UpdateStatusBarLabel(ViewModel.SelectedVariant, SelectorLabel.IsHitTestVisible), Mode=OneWay}" />
                        </controls:UXComboBox.SecondaryContent>
                        <ComboBox.ItemTemplateSelector>
                            <views:VariantTemplateSelector>
                                <views:VariantTemplateSelector.VariantTemplate>
                                    <DataTemplate x:DataType="core:FontVariant">
                                        <TextBlock
                                            FontFamily="{x:Bind core:Converters.GetPreviewFontSource((core:FontVariant))}"
                                            FontStretch="{x:Bind DirectWriteProperties.Stretch}"
                                            FontStyle="{x:Bind DirectWriteProperties.Style}"
                                            FontWeight="{x:Bind DirectWriteProperties.Weight}"
                                            Text="{x:Bind PreferredName}" />
                                    </DataTemplate>
                                </views:VariantTemplateSelector.VariantTemplate>
                                <views:VariantTemplateSelector.HeaderTemplate>
                                    <DataTemplate>
                                        <Border
                                            Margin="-12 0 -12 -4"
                                            Padding="12 0"
                                            BorderBrush="{ThemeResource TextFillColorDisabledBrush}"
                                            BorderThickness="0 0 0 1">
                                            <TextBlock
                                                x:Name="T"
                                                Margin="0 8 0 4"
                                                core:Properties.IsContainerEnabled="False"
                                                Text="{Binding}" />
                                        </Border>

                                    </DataTemplate>
                                </views:VariantTemplateSelector.HeaderTemplate>
                            </views:VariantTemplateSelector>
                        </ComboBox.ItemTemplateSelector>
                    </controls:UXComboBox>

                    <controls:UXButton
                        x:Name="FontPropertiesButton"
                        x:Uid="FontPropertiesButton"
                        VerticalAlignment="Stretch"
                        IsHintVisible="True"
                        Style="{ThemeResource MapInfoButtonStyle}"
                        d:Label="Info"
                        d:ToolTipService.ToolTip="{core:Localizer Key=FontPropertiesButton/[using:Windows.UI.Xaml.Controls]ToolTipService/ToolTip}">
                        <FontIcon
                            Margin="0,0,-2,0"
                            VerticalAlignment="Center"
                            core:Properties.ThemeIcon="FontInfo"
                            FontSize="18" />
                        <Button.Flyout>
                            <Flyout
                                core:Properties.UseExpandContractAnimation="True"
                                win1903:FlyoutPresenterStyle="{StaticResource ThemeFlyoutStyle}"
                                Opened="InfoFlyout_Opened"
                                Opening="InfoFlyout_Opening">
                                <ScrollViewer x:Name="InfoScroller">
                                    <Border MinWidth="300" MaxWidth="400">
                                        <StackPanel Padding="12 24" Spacing="12">
                                            <Panel.Resources>
                                                <Style BasedOn="{StaticResource BaseTextStyle}" TargetType="TextBlock">
                                                    <Setter Property="FontFamily" Value="{StaticResource ContentControlThemeFontFamily}" />
                                                    <Setter Property="Opacity" Value="0.5" />
                                                    <Setter Property="TextWrapping" Value="Wrap" />
                                                    <Setter Property="VerticalAlignment" Value="Top" />
                                                </Style>
                                                <Style x:Key="Value" BasedOn="{StaticResource BaseTextStyle}" TargetType="TextBlock">
                                                    <Setter Property="FontFamily" Value="{StaticResource ContentControlThemeFontFamily}" />
                                                    <Setter Property="Opacity" Value="1" />
                                                    <Setter Property="Grid.Column" Value="1" />
                                                    <Setter Property="TextWrapping" Value="Wrap" />
                                                    <Setter Property="VerticalAlignment" Value="Top" />
                                                    <Setter Property="IsTextSelectionEnabled" Value="True" />
                                                </Style>
                                            </Panel.Resources>
                                            <TextBlock
                                                x:Uid="FontPropTitle"
                                                FontFamily="{StaticResource ContentControlThemeFontFamily}"
                                                FontWeight="Bold"
                                                d:Text="{core:Localizer Key=FontPropTitle/Text}" />
                                            <controls:AutoGrid RowSpacing="8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock x:Uid="FontPropFamily" d:Text="{core:Localizer Key=FontPropFamily/Text}" />
                                                <TextBlock
                                                    Grid.Row="0"
                                                    Style="{StaticResource Value}"
                                                    Text="{Binding SelectedFont.Font.Name}" />

                                                <TextBlock x:Uid="FontPropFace" d:Text="{core:Localizer Key=FontPropFace/Text}" />
                                                <TextBlock Style="{StaticResource Value}" Text="{Binding SelectedVariant.PreferredName}" />

                                                <TextBlock x:Uid="FontPropCharCount" d:Text="{core:Localizer Key=FontPropCharCount/Text}" />
                                                <TextBlock Style="{StaticResource Value}" Text="{x:Bind ViewModel.SelectedVariant.Characters.Count, Mode=OneWay}" />

                                                <TextBlock x:Uid="FontPropCount" d:Text="{core:Localizer Key=FontPropCount/Text}" />
                                                <TextBlock Style="{StaticResource Value}" Text="{x:Bind ViewModel.SelectedVariant.Face.GlyphCount, Mode=OneWay}" />

                                                <TextBlock x:Uid="FontPropType" d:Text="{core:Localizer Key=FontPropType/Text}" />
                                                <TextBlock Style="{StaticResource Value}" Text="{Binding SelectedVariant.Face.FileFormatType}" />

                                                <TextBlock x:Uid="FontPropSymbol" d:Text="{core:Localizer Key=FontPropSymbol/Text}" />
                                                <TextBlock Style="{StaticResource Value}" Text="{Binding SelectedVariant.DirectWriteProperties.IsSymbolFont}" />

                                                <TextBlock x:Uid="FontPropMonospaced" d:Text="{core:Localizer Key=FontPropMonospaced/Text}" />
                                                <TextBlock Style="{StaticResource Value}" Text="{Binding SelectedVariant.DirectWriteProperties.IsMonospacedFont}" />

                                                <TextBlock x:Uid="FontPropSimulated" d:Text="{core:Localizer Key=FontPropSimulated/Text}" />
                                                <TextBlock Style="{StaticResource Value}" Text="{Binding SelectedVariant.DirectWriteProperties.IsSimulated}" />

                                                <TextBlock x:Uid="FontPropStyle" d:Text="{core:Localizer Key=FontPropStyle/Text}" />
                                                <TextBlock Style="{StaticResource Value}" Text="{Binding SelectedVariant.DirectWriteProperties.Style}" />

                                                <TextBlock x:Uid="FontPropStretch" d:Text="{core:Localizer Key=FontPropStretch/Text}" />
                                                <TextBlock Style="{StaticResource Value}" Text="{Binding SelectedVariant.DirectWriteProperties.Stretch}" />

                                                <TextBlock x:Uid="FontPropWeight" d:Text="{core:Localizer Key=FontPropWeight/Text}" />
                                                <TextBlock Style="{StaticResource Value}" Text="{x:Bind core:Converters.GetWeightName(ViewModel.SelectedVariant.DirectWriteProperties.Weight), Mode=OneWay}" />

                                                <TextBlock
                                                    x:Name="FontPropColourFormats"
                                                    x:Load="{x:Bind ViewModel.SelectedVariant.Face.Properties.IsColorFont, Mode=OneWay, FallbackValue=False}"
                                                    x:Uid="FontPropColourFormats"
                                                    d:Text="{core:Localizer Key=FontPropColourFormats/Text}" />
                                                <TextBlock
                                                    x:Name="FontProperColourFormatsValue"
                                                    x:Load="{x:Bind ViewModel.SelectedVariant.Face.Properties.IsColorFont, Mode=OneWay, FallbackValue=False}"
                                                    Style="{StaticResource Value}"
                                                    Text="{x:Bind core:Converters.GetColourGlyphFormats(ViewModel.SelectedVariantAnalysis), Mode=OneWay}" />

                                                <TextBlock
                                                    x:Name="FontPropCOLRVersion"
                                                    x:Load="{x:Bind ViewModel.SelectedVariantAnalysis.HasCOLRGlyphs, Mode=OneWay, FallbackValue=False}"
                                                    x:Uid="FontPropCOLRVersion"
                                                    d:Text="{core:Localizer Key=FontPropCOLRVersion/Text}" />
                                                <TextBlock
                                                    x:Name="FontProperCOLRVersionValue"
                                                    x:Load="{x:Bind ViewModel.SelectedVariantAnalysis.HasCOLRGlyphs, Mode=OneWay, FallbackValue=False}"
                                                    Style="{StaticResource Value}"
                                                    Text="{x:Bind ViewModel.SelectedVariantAnalysis.COLRVersion, Mode=OneWay}" />

                                                <TextBlock x:Uid="FontPropFileSize" d:Text="{core:Localizer Key=FontPropFileSize/Text}" />
                                                <TextBlock Style="{StaticResource Value}" Text="{x:Bind core:Converters.GetFileSize(ViewModel.SelectedVariantAnalysis.FileSize), Mode=OneWay}" />

                                                <TextBlock
                                                    x:Name="FontPropSrc"
                                                    x:Load="{x:Bind ViewModel.SelectedVariant.DirectWriteProperties.IsRemote, Mode=OneWay, FallbackValue=False}"
                                                    x:Uid="FontPropInstallType"
                                                    d:Text="{core:Localizer Key=FontPropInstallType/Text}" />
                                                <TextBlock
                                                    x:Name="FontPropSrcValue"
                                                    x:Load="{x:Bind ViewModel.SelectedVariant.DirectWriteProperties.IsRemote, Mode=OneWay, FallbackValue=False}"
                                                    Style="{StaticResource Value}"
                                                    Text="{core:Localizer Key='DWriteSourceRemoteFontProvider'}" />


                                                <!--<TextBlock x:Uid="FontPropInstallType" d:Text="{core:Localizer Key=FontPropInstallType/Text}" />
                                                <TextBlock Style="{StaticResource Value}" Text="{x:Bind ViewModel.SelectedVariant.GetProviderName(), Mode=OneWay}" />-->

                                                <TextBlock
                                                    x:Name="FontPropXaml"
                                                    x:Load="{x:Bind ViewModel.SelectedVariant.IsImported, Mode=OneWay, FallbackValue=False}"
                                                    x:Uid="FontPropXaml"
                                                    Grid.Column="0"
                                                    Grid.ColumnSpan="2"
                                                    Padding="0,4,0,0"
                                                    d:Text="{core:Localizer Key=FontPropXaml/Text}" />

                                                <TextBlock
                                                    x:Name="FontPropXamlValue"
                                                    x:Load="{x:Bind ViewModel.SelectedVariant.IsImported, Mode=OneWay, FallbackValue=False}"
                                                    Grid.Column="0"
                                                    Grid.ColumnSpan="2"
                                                    Margin="0,-4,0,0"
                                                    Style="{StaticResource Value}"
                                                    Text="{x:Bind ViewModel.XamlPath, Mode=OneWay}" />

                                                <TextBlock
                                                    x:Uid="FontPropFilePath"
                                                    Grid.Column="0"
                                                    Grid.ColumnSpan="2"
                                                    Visibility="{x:Bind ShowFilePath(ViewModel.SelectedVariantAnalysis.FilePath, ViewModel.SelectedVariant.IsImported), Mode=OneWay, FallbackValue=Collapsed}"
                                                    d:Text="{core:Localizer Key=FontPropFilePath/Text}" />
                                                <TextBlock
                                                    Grid.Column="0"
                                                    Grid.ColumnSpan="2"
                                                    Margin="0,-4,0,0"
                                                    Style="{StaticResource Value}"
                                                    Text="{x:Bind ViewModel.SelectedVariantAnalysis.FilePath, Mode=OneWay}"
                                                    Visibility="{x:Bind ShowFilePath(ViewModel.SelectedVariantAnalysis.FilePath, ViewModel.SelectedVariant.IsImported), Mode=OneWay, FallbackValue=Collapsed}" />

                                            </controls:AutoGrid>

                                            <ItemsControl ItemsSource="{Binding SelectedVariant.FontInformation}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Spacing="12" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel>
                                                            <TextBlock
                                                                Opacity="0.5"
                                                                Style="{StaticResource BaseTextStyle}"
                                                                Text="{Binding Key}" />
                                                            <TextBlock
                                                                IsTextSelectionEnabled="True"
                                                                Style="{StaticResource Value}"
                                                                Text="{Binding Value}" />
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <TextBlock
                                                x:Uid="FontPropPanoseTitle"
                                                FontWeight="Bold"
                                                Visibility="{x:Bind ViewModel.SelectedVariant.Panose.HasPanose, Mode=OneWay}"
                                                d:Text="{core:Localizer Key=FontPropPanoseTitle/Text}" />

                                            <ItemsControl ItemsSource="{x:Bind ViewModel.SelectedVariant.Panose.GetValues(), Mode=OneWay}" Visibility="{x:Bind ViewModel.SelectedVariant.Panose.HasPanose, Mode=OneWay}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Spacing="8" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock
                                                                Opacity="0.5"
                                                                Style="{StaticResource BaseTextStyle}"
                                                                Text="{Binding Key}" />
                                                            <TextBlock
                                                                IsTextSelectionEnabled="True"
                                                                Style="{StaticResource Value}"
                                                                Text="{Binding Value}" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>

                                </ScrollViewer>
                            </Flyout>
                        </Button.Flyout>
                    </controls:UXButton>

                    <controls:UXButton
                        x:Name="FontOptionsButton"
                        x:Uid="FontOptionsButton"
                        VerticalAlignment="Stretch"
                        helpers:FluentAnimation.PointerOver="DropDownGlyph"
                        IsHintVisible="True"
                        Style="{ThemeResource MapInfoButtonStyle}"
                        Visibility="Collapsed"
                        d:Label="{core:Localizer Key=FontOptionsButton/Label}"
                        d:ToolTipService.ToolTip="{core:Localizer Key=FontOptionsButton/[using:Windows.UI.Xaml.Controls]ToolTipService/ToolTip}">
                        <FontIcon
                            Margin="0,0,-2,0"
                            FontSize="18"
                            Glyph="{core:ThemeIconGlyph Icon=RenderingOptions}"
                            Style="{StaticResource ThemeFontIconStyle}" />
                        <Button.Flyout>
                            <Flyout
                                core:Properties.UseExpandContractAnimation="True"
                                win1903:FlyoutPresenterStyle="{StaticResource ThemeFlyoutStyle}"
                                Placement="Bottom">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <controls:ExtendedListView
                                        x:Name="OptionsList"
                                        Grid.Row="1"
                                        Width="300"
                                        Padding="0"
                                        ItemContainerTransitions="{StaticResource NoTransitions}"
                                        ItemsSource="{x:Bind ViewModel.TypographyFeatures, Mode=OneWay}"
                                        SelectedItem="{Binding SelectedTypography, Mode=TwoWay}"
                                        SelectionMode="Single"
                                        ShowsScrollingPlaceholders="False"
                                        SingleSelectionFollowsFocus="True">
                                        <!--<ListView.ItemContainerStyle>
                                            <Style BasedOn="{StaticResource DefaultThemeListViewItemStyle}" TargetType="ListViewItem">
                                                <Setter Property="core:Properties.PointerOverAnimation" Value="Name" />
                                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                            </Style>
                                        </ListView.ItemContainerStyle>-->
                                        <ListView.Header>
                                            <StackPanel Margin="12,4" Spacing="12">
                                                <TextBlock
                                                    x:Name="ColorHeader"
                                                    x:Load="{x:Bind ViewModel.SelectedVariantAnalysis.ContainsVectorColorGlyphs, Mode=OneWay}"
                                                    x:Uid="FontDisplayHeader"
                                                    FontFamily="{StaticResource ContentControlThemeFontFamily}"
                                                    FontWeight="Bold"
                                                    Opacity="0.5"
                                                    d:Text="{core:Localizer Key=FontDisplayHeader/Text}" />
                                                <ToggleSwitch
                                                    x:Name="ColorGlyphToggle"
                                                    x:Load="{x:Bind ViewModel.SelectedVariantAnalysis.ContainsVectorColorGlyphs, Mode=OneWay}"
                                                    x:Uid="ColorGlyphToggle"
                                                    VerticalAlignment="Bottom"
                                                    IsOn="{Binding ShowColorGlyphs, Mode=TwoWay}"
                                                    d:OffContent="{core:Localizer Key=ColorGlyphToggle/OffContent}"
                                                    d:OnContent="{core:Localizer Key=ColorGlyphToggle/OnContent}" />
                                                <TextBlock
                                                    x:Uid="TypographyVariantsHeader"
                                                    Margin="0,12,0,0"
                                                    FontFamily="{StaticResource ContentControlThemeFontFamily}"
                                                    FontWeight="Bold"
                                                    Opacity="0.5"
                                                    Visibility="{x:Bind ViewModel.SelectedVariant.HasXamlTypographyFeatures, Mode=OneWay}"
                                                    d:Text="{core:Localizer Key=TypographyVariantsHeader/Text}" />
                                            </StackPanel>
                                        </ListView.Header>
                                        <ListView.ItemTemplate>
                                            <DataTemplate x:DataType="core:TypographyFeatureInfo">
                                                <TextBlock
                                                    x:Name="TemplateContent"
                                                    Margin="12 0"
                                                    Text="{x:Bind DisplayName}" />
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </controls:ExtendedListView>
                                </Grid>
                            </Flyout>
                        </Button.Flyout>
                    </controls:UXButton>

                    <controls:UXButton
                        x:Name="ViewToggleButton"
                        x:Uid="ViewToggleButton"
                        helpers:FluentAnimation.PointerOver="FluentContentPresenter"
                        helpers:FluentAnimation.PointerOverOffset="-2"
                        Click="{x:Bind ViewModel.ChangeDisplayMode}"
                        Style="{ThemeResource MapInfoButtonStyle}"
                        ToolTipService.ToolTip="{core:Localizer Key=LblSwitchToTypeRamp/Text}"
                        d:Label="{core:Localizer Key=ViewToggleButton/Label}">
                        <Button.Resources>
                            <Storyboard x:Key="Released">
                                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Icon" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.Rotation)">
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="540">
                                        <EasingDoubleKeyFrame.EasingFunction>
                                            <CircleEase EasingMode="EaseOut" />
                                        </EasingDoubleKeyFrame.EasingFunction>
                                    </EasingDoubleKeyFrame>
                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                            <Storyboard x:Key="Pressed">
                                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Icon" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.Rotation)">
                                    <EasingDoubleKeyFrame KeyTime="0" Value="0" />
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="-20" />
                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                        </Button.Resources>
                        <FontIcon
                            x:Name="Icon"
                            Margin="0,0,-2,0"
                            FontSize="18"
                            Glyph="{core:ThemeIconGlyph Icon=ViewSwitch}"
                            RenderTransformOrigin="0.5 0.5"
                            Style="{StaticResource ThemeFontIconStyle}">
                            <FontIcon.RenderTransform>
                                <CompositeTransform />
                            </FontIcon.RenderTransform>
                        </FontIcon>
                    </controls:UXButton>

                    <controls:UXButton
                        x:Name="CharacterFilterButton"
                        x:Uid="CharacterFilterButton"
                        VerticalAlignment="Stretch"
                        IsActive="{x:Bind ViewModel.IsFiltered, Mode=OneWay}"
                        IsHintVisible="True"
                        Loaded="{x:Bind helpers:CompositionFactory.SetStandardFadeInOut}"
                        Style="{ThemeResource MapInfoButtonStyle}"
                        d:Label="{core:Localizer Key=CharacterFilterButton/Label}"
                        d:ToolTipService.ToolTip="{core:Localizer Key=CharacterFilterButton/[using:Windows.UI.Xaml.Controls]ToolTipService/ToolTip}">
                        <FontIcon
                            Margin="0,0,-2,0"
                            FontSize="18"
                            Glyph="{core:ThemeIconGlyph Icon=Filter}"
                            Style="{StaticResource ThemeFontIconStyle}" />
                        <Button.Flyout>
                            <Flyout
                                x:Name="CatFlyout"
                                core:Properties.UseExpandContractAnimation="True"
                                FlyoutPresenterStyle="{StaticResource ThemeFlyoutStyle}"
                                Opened="{x:Bind CatFlyoutContent.OnOpening}">
                                <controls:CategoryFlyout
                                    x:Name="CatFlyoutContent"
                                    AcceptClicked="CategoryFlyout_AcceptClicked"
                                    Flyout="{x:Bind CatFlyout}"
                                    SourceCategories="{x:Bind ViewModel.SelectedGlyphCategories, Mode=OneWay}" />
                            </Flyout>
                        </Button.Flyout>
                    </controls:UXButton>

                </toolkit:WrapPanel>

                <!--
                    core:Properties.ClickAnimation="FluentContentPresenter|Scale"
                    core:Properties.ClickAnimationOffset="0.8"
                    core:Properties.PointerOverAnimation=""
                -->
                <controls:UXButton
                    x:Name="MoreOptionsButton"
                    x:Uid="BtnMoreIcon"
                    Grid.Column="1"
                    VerticalAlignment="Top"
                    core:Properties.UseStandardReposition="{x:Bind ViewModel.AllowAnimation, Mode=OneWay}"
                    helpers:FluentAnimation.PointerOver="FluentContentPresenter"
                    helpers:FluentAnimation.PointerOverOffset="-2"
                    DataContext="{x:Bind ViewModel.SelectedFont, Mode=OneWay}"
                    Style="{ThemeResource MapInfoButtonStyle}"
                    d:ToolTipService.ToolTip="{core:Localizer Key=BtnMoreIcon/[using:Windows.UI.Xaml.Controls]ToolTipService/ToolTip}">
                    <Button.Flyout>
                        <MenuFlyout
                            x:Name="MoreMenu"
                            AreOpenCloseAnimationsEnabled="{x:Bind ViewModel.AllowAnimation, Mode=OneWay}"
                            Opening="MenuFlyout_Opening"
                            Placement="BottomEdgeAlignedRight">
                            <MenuFlyout.MenuFlyoutPresenterStyle>
                                <Style BasedOn="{StaticResource DefaultFlyoutStyle}" TargetType="MenuFlyoutPresenter" />
                            </MenuFlyout.MenuFlyoutPresenterStyle>
                        </MenuFlyout>
                    </Button.Flyout>
                    <FontIcon
                        Margin="0,-2,-2,-2"
                        Glyph="{core:ThemeIconGlyph Icon=More}"
                        Style="{StaticResource ThemeFontIconStyle}" />
                </controls:UXButton>


                <!--  Notifications  -->
                <StackPanel
                    x:Name="TypeRampHints"
                    Grid.Row="1"
                    Spacing="0" />

            </Grid>



            <!--  The One And Only, The Character Map  -->
            <Grid
                x:Name="CharGridRoot"
                Grid.Row="2"
                Grid.Column="0"
                Margin="0"
                RenderTransformOrigin="0.5,0.5"
                Transform3D="{StaticResource Perspective}"
                d:Background="Red">
                <Grid.RenderTransform>
                    <CompositeTransform />
                </Grid.RenderTransform>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <controls:CharacterGridView
                    x:Name="CharGrid"
                    x:FieldModifier="public"
                    ContainerContentChanging="CharGrid_ContainerContentChanging"
                    EnableResizeAnimation="{x:Bind ViewModel.AllowExpensiveAnimation, Mode=OneWay}"
                    IsItemClickEnabled="False"
                    ItemAnnotation="{x:Bind ViewModel.Settings.GlyphAnnotation, Mode=OneTime}"
                    ItemContainerTransitions="{StaticResource NoTransitions}"
                    ItemDoubleTapped="CharGrid_ItemDoubleTapped"
                    ItemFontFace="{x:Bind ViewModel.SelectedVariant.Face, Mode=OneWay}"
                    ItemFontFamily="{x:Bind ViewModel.FontFamily, Mode=OneWay}"
                    ItemFontVariant="{x:Bind ViewModel.SelectedVariant, Mode=OneWay}"
                    ItemTypography="{x:Bind ViewModel.SelectedTypography, Mode=OneWay}"
                    ItemsSource="{Binding Source={StaticResource CharacterSource}}"
                    SelectedItem="{Binding SelectedChar, Mode=TwoWay}"
                    SelectionMode="Single"
                    ShowColorGlyphs="{x:Bind ViewModel.ShowColorGlyphs, Mode=OneWay}"
                    ShowVariationsInToolTips="True"
                    ShowsScrollingPlaceholders="False"
                    Style="{StaticResource CharacterMapStyle}">
                    <GridView.Header>
                        <StackPanel
                            x:Name="InfoHeader"
                            RequestedTheme="Dark"
                            Spacing="0">

                            <controls:InfoBar
                                x:Name="VariableFeaturesMessage"
                                x:Load="{x:Bind ViewModel.SelectedVariant.DirectWriteProperties.HasVariations, Mode=OneWay, FallbackValue=False}"
                                Content="{core:Localizer Key=VariableFeaturesMessage/Text}">
                                <controls:InfoBar.SecondaryContent>
                                    <Button
                                        Click="VariableHintClick"
                                        Style="{StaticResource ChromelessButtonStyle}"
                                        ToolTipService.ToolTip="{core:Localizer Key=LblSwitchToTypeRamp/Text}">
                                        <FontIcon
                                            FontSize="13.333"
                                            Glyph="{core:ThemeIconGlyph Icon=ViewSwitch}"
                                            Style="{StaticResource ThemeFontIconStyle}" />
                                    </Button>
                                </controls:InfoBar.SecondaryContent>
                            </controls:InfoBar>

                            <controls:InfoBar
                                x:Name="ColrV1SupportMessage"
                                x:Load="{x:Bind ViewModel.SelectedVariant.SupportsCOLRv1Rendering, Mode=OneWay, FallbackValue=False}"
                                Content="{core:Localizer Key=ColrV1SupportMessage/Text}">
                                <controls:InfoBar.SecondaryContent>
                                    <Button
                                        Click="VariableHintClick"
                                        Style="{StaticResource ChromelessButtonStyle}"
                                        ToolTipService.ToolTip="{core:Localizer Key=LblSwitchToTypeRamp/Text}">
                                        <FontIcon
                                            FontSize="13.333"
                                            Glyph="{core:ThemeIconGlyph Icon=ViewSwitch}"
                                            Style="{StaticResource ThemeFontIconStyle}" />
                                    </Button>
                                </controls:InfoBar.SecondaryContent>
                            </controls:InfoBar>

                            <controls:InfoBar
                                x:Name="DeprecatedIconsInfoBar"
                                x:Load="{x:Bind core:Converters.TrueTrueTrue(ViewModel.IsFiltered, ViewModel.Settings.HideDeprecatedMDL2, ViewModel.IsMDL2Font), Mode=OneWay, FallbackValue=False}"
                                Content="{core:Localizer Key=HiddenGlyphsMessage/Text}">
                                <controls:InfoBar.SecondaryContent>
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <Button Click="FilterHint_Click" Style="{StaticResource ChromelessButtonStyle}">
                                            <FontIcon
                                                FontSize="13.333"
                                                Glyph="{core:ThemeIconGlyph Icon=Filter}"
                                                Style="{StaticResource ThemeFontIconStyle}" />
                                        </Button>

                                        <Button
                                            Click="AdvancedSettings_Click"
                                            Style="{StaticResource ChromelessButtonStyle}"
                                            ToolTipService.ToolTip="{core:Localizer Key=SettingsHeader/Text}">
                                            <FontIcon
                                                FontSize="13.333"
                                                Glyph="{core:ThemeIconGlyph Icon=Settings}"
                                                Style="{StaticResource ThemeFontIconStyle}" />
                                        </Button>
                                    </StackPanel>

                                </controls:InfoBar.SecondaryContent>
                            </controls:InfoBar>

                        </StackPanel>
