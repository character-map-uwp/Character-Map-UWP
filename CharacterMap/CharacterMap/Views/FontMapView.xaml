                            Stretch="Uniform" />
                    </controls:UXButton>
                </Grid>

                <ScrollViewer
                    x:Name="VariationScroller"
                    x:Load="{x:Bind ViewModel.SelectedVariantAnalysis.HasVariationAxis, Mode=OneWay, FallbackValue=False, TargetNullValue=False}"
                    Grid.Row="1"
                    MaxHeight="246">
                    <ItemsControl
                        x:Name="VariableAxis"
                        Margin="24 0 24 0"
                        Padding="12"
                        Background="LightGray"
                        ItemsSource="{x:Bind ViewModel.SelectedVariantAnalysis.VariableAxis, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="cx:DWriteFontAxis">
                                <Grid Margin="0 0 0 2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Slider
                                        x:Name="AxisSlider"
                                        Maximum="{x:Bind Maximum}"
                                        Minimum="{x:Bind Minimum}"
                                        SmallChange="0.1"
                                        StepFrequency="0.1"
                                        Style="{StaticResource DefaultThemeSliderStyle}"
                                        ValueChanged="Slider_ValueChanged"
                                        Value="{x:Bind Value, Mode=TwoWay}">
                                        <Slider.Header>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock
                                                    Margin="0 0 0 -8"
                                                    FontSize="12"
                                                    Foreground="{ThemeResource TextControlPlaceholderForeground}"
                                                    Text="{x:Bind Label}" />

                                                <FontIcon
                                                    x:Name="Hidden"
                                                    x:Load="{x:Bind IsHidden}"
                                                    Margin="0 2 0 -6"
                                                    core:Properties.ThemeIcon="Hidden"
                                                    FontSize="12"
                                                    Opacity="0.4" />
                                            </StackPanel>
                                        </Slider.Header>
                                    </Slider>
                                    <Button
                                        x:Uid="BtnReset"
                                        Grid.Column="1"
                                        Margin="0 0 0 4"
                                        VerticalAlignment="Bottom"
                                        Click="AxisReset_Click"
                                        FontSize="12"
                                        Style="{StaticResource ThemeTextBlockButtonStyle}"
                                        Tag="{Binding ElementName=AxisSlider}"
                                        d:Content="{core:Localizer Key=BtnReset/Content}" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <ScrollViewer
                    x:Name="TypeRampScroller"
                    Grid.Row="2"
                    FlowDirection="{x:Bind TypeRampSuggestionBox.DetectedFlowDirection, Mode=OneWay}"
                    HorizontalScrollBarVisibility="Auto"
                    HorizontalScrollMode="Enabled"
                    MaxZoomFactor="4"
                    MinZoomFactor="1"
                    Visibility="Visible"
                    ZoomMode="Enabled">
                    <ItemsControl
                        x:Name="TypeRampList"
                        FontFamily="{Binding FontFamily, Mode=OneWay, FallbackValue='Segoe UI'}"
                        FontStretch="{x:Bind ViewModel.SelectedVariant.DirectWriteProperties.Stretch, Mode=OneWay}"
                        FontStyle="{x:Bind ViewModel.SelectedVariant.DirectWriteProperties.Style, Mode=OneWay}"
                        FontWeight="{x:Bind ViewModel.SelectedVariant.DirectWriteProperties.Weight, Mode=OneWay}"
                        ItemsSource="{x:Bind ViewModel.Ramps, Mode=OneWay}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Margin="24 10 6 48" Spacing="16" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="viewmodels:RampOption">
                                <StackPanel Spacing="2">
                                    <TextBlock
                                        FontFamily="{StaticResource ContentControlThemeFontFamily}"
                                        FontSize="12"
                                        FontStretch="Normal"
                                        FontStyle="Normal"
                                        FontWeight="Normal"
                                        Foreground="{ThemeResource TextControlPlaceholderForeground}"
                                        Text="{x:Bind FontSize}" />
                                    <TextBlock
                                        x:Name="Framework"
                                        x:Load="{x:Bind core:Converters.False(Option.RequiresNativeRender), FallbackValue=False, Mode=OneWay}"
                                        core:Properties.Options="{x:Bind Option, Mode=OneWay}"
                                        FontSize="{x:Bind FontSize}"
                                        Text="{Binding ElementName=TypeRampRoot, Path=DataContext.TypeRampText}" />
                                    <cxc:DirectText
                                        x:Name="Native"
                                        x:Load="{x:Bind Option.RequiresNativeRender, FallbackValue=False, Mode=OneWay}"
                                        core:Properties.Options="{x:Bind Option, Mode=OneWay}"
                                        FontSize="{Binding FontSize, TargetNullValue=12.0, FallbackValue=12.0}"
                                        IsOverwriteCompensationEnabled="True"
                                        Text="{Binding ElementName=TypeRampRoot, Path=DataContext.TypeRampText}" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
