                            Style="{StaticResource ChromelessTextBoxStyle}"
                            Text="{x:Bind ViewModel.Sequence, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Grid Grid.Column="1" core:Properties.UseStandardReposition="{x:Bind ViewModel.AllowAnimation, Mode=OneWay}">
                            <Grid.Resources>
                                <Style BasedOn="{StaticResource LabelAppBarButtonStyle}" TargetType="AppBarButton">
                                    <Setter Property="Padding" Value="12 6" />
                                    <Setter Property="Margin" Value="0" />
                                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                                </Style>
                            </Grid.Resources>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <AppBarButton
                                x:Uid="AddButton"
                                core:Properties.ThemeIcon="Add"
                                Click="AppBarButton_Click"
                                IsEnabled="{x:Bind core:Converters.IsNotNull(ViewModel.SelectedChar), Mode=OneWay}"
                                d:Label="{core:Localizer Key=AddButton/Label}" />
                            <AppBarButton
                                x:Uid="BtnCopyGlyph"
                                Grid.Row="1"
                                core:Properties.ThemeIcon="Copy"
                                Click="{x:Bind ViewModel.CopySequence}"
                                IsEnabled="{x:Bind core:Converters.IsNotNullOrEmpty(ViewModel.Sequence), Mode=OneWay}"
                                d:Label="{core:Localizer Key=BtnCopyGlyph/Label}"
                                d:ToolTipService.ToolTip="{core:Localizer Key=BtnCopyGlyph/[using:Windows.UI.Xaml.Controls]ToolTipService/ToolTip}" />
                            <AppBarButton
                                x:Uid="AppBtnClear"
                                Grid.Row="2"
                                core:Properties.ThemeIcon="ClearText"
                                Click="{x:Bind ViewModel.ClearSequence}"
                                IsEnabled="{x:Bind core:Converters.IsNotNullOrEmpty(ViewModel.Sequence), Mode=OneWay}"
                                d:Label="{core:Localizer Key=AppBtnClear/Label}" />
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <!--  Type Ramp  -->
            <Grid
                x:Name="TypeRampRoot"
