                                            Style="{StaticResource CopyButtonStyle}"
                                            Tag="{x:Bind Value}"
                                            d:ToolTipService.ToolTip="{core:Localizer Key=BtnCopyDev/[using:Windows.UI.Xaml.Controls]ToolTipService/ToolTip}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

